{
  "compilerOptions": {
    "outDir": "./build",
    "noImplicitAny": true,
    "strict": true,
    "module": "CommonJS",
    "target": "es6",
    "lib": [
      "DOM",
      "ES2015"
    ],
    "moduleResolution": "node",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
  },
  "exclude": [
    "./build",
    "./src/utils/*",
    "node_modules"
  ],
  "include": [
    "./src/index.ts"
  ]
}
